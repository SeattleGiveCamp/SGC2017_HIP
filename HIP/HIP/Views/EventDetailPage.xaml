<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HIP.EventDetailPage" Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
		<Label Text="{Binding Item.Name}" FontSize="Medium" />
		<Label Text="{Binding Item.Description}" FontSize="Small" />
        <Label Text="{Binding Item.Date}" FontSize="Small" />

        <Button Text="Add to Calendar" Clicked="AddToCalendar_Clicked" />
        <Button Text="Submit" Clicked="Submit_Clicked" />
	</StackLayout>
</ContentPage>
